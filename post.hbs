{{!< default}}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div id="site-head-content" class="inner">

            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>
<nav>
    <p>
        <a href="/">‚Üê Back</a>
    </p>
</nav>
<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        <h1 class="post-title">{{{title}}}</h1>

        {{! Everything below outputs content of the the post which has been published }}
        <span class="newsDate">
        <span>
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD'}}
          </time>
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMM'}}
          </time>
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='YYYY'}}{{#if tags}}, on {{tags}}{{/if}}
          </time>
        </span>
      </span>

        <section class="post-content">
            {{content}}
        </section>

        {{/post}}

    </article>
    
</main>